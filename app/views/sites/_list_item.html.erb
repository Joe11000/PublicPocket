<div>
    <%= form_for locals[:site], {remote: true} do |f|%>
      <% row_num = locals[:index] + 1 %>
      <td><%= label_tag(locals[:index] + 1) %></td>
      <div class="clearfix visible-xs"></div>

      <td><%= f.text_field :title %></td>
      <div class="clearfix visible-xs "></div>

      <td><%= link_to locals[:site].url %></td>
      <div class="clearfix visible-xs "></div>

      <td>
        <%= f.select :read_status, options_for_select( %w[ Unread Reading Readed ], locals[:site].read_status) %>
