      <div class="clearfix visible-xs "></div>

      <td><%= f.submit :submit, {class: "btn btn-primary hide"} %></td>

      <td><%= f.submit :delete, {class: "btn btn-danger", action: :destroy} %></td>
      <div class="clearfix visible-xs "></div>

</div>
<br>
